<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@color/bg_color">

    <LinearLayout
        android:id="@+id/llParent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" android:padding="2dp" android:gravity="center_vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Receipt Summary"
            android:textColor="@color/SunshineYellow"
            android:textSize="10pt"
            android:typeface="serif" />

        <LinearLayout
            android:id="@+id/llBottomBorder"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@drawable/white_bar"
            android:orientation="vertical" >
        </LinearLayout>

        <TableLayout
            android:id="@+id/tblReceiptLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:background="@drawable/header_background">

                <TextView
                    android:id="@+id/HdrRctCourseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:text="Course Name" android:textColor="#000000" android:textSize="7pt"/>

                <TextView
                    android:id="@+id/HdrReceiptMRDt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="MR. Dt." android:textColor="#000000" android:gravity="center" android:textSize="7pt"/>

                <TextView
                    android:id="@+id/HdrReceiptMRNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:text="MR. No." android:textColor="#000000" android:gravity="left" android:textSize="7pt"/>

                <TextView
                    android:id="@+id/HdrReceiptFees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:text="Fees" android:textColor="#000000" android:gravity="right" android:textSize="7pt"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:background="@drawable/header_background">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:text="Total    " android:textColor="#000000" android:textSize="7pt"/>

            <TextView
                android:id="@+id/txtTotalRctAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amt.." android:gravity="right" android:textColor="#000000" android:textSize="7pt"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>