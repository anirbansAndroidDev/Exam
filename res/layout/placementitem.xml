<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imgStudentPhoto"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/anonymous_old" 
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/txtStudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" 
        android:textSize="12sp"/>

    <LinearLayout
        android:id="@+id/llPlcmntDetail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llPlcmntImg"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_student_image"
                android:visibility="gone" 
                android:padding="3dp">

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="9dp"
                    android:text="Student Code"
                    android:textColor="@color/SunshineYellow"
                    android:textSize="10sp"  />

                <TextView
                    android:id="@+id/txtStudentCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/SunshineYellow"
                    android:textSize="10sp"  />
            </TableRow>

            <TableRow
                android:id="@+id/TableRow01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_student_image" 
                android:visibility="gone"
                android:padding="3dp">

                <TextView
                    android:id="@+id/TextView08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="9dp"
                    android:text="Name"
                    android:textColor="@color/SunshineYellow"
                    android:textSize="10sp"  />

                <TextView
                    android:id="@+id/txtPlacedName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/SunshineYellow"
                    android:textSize="10sp"  />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_student_image"
                android:visibility="visible" 
                android:padding="3dp">

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="9dp"
                    android:text="Center"
                    android:textColor="@color/main_header"
                    android:textSize="10sp"  />

                <TextView
                    android:id="@+id/txtCenterCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/main_header"
                    android:textSize="10sp"  />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_student_image" 
                android:padding="3dp">

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="9dp"
                    android:text="Company"
                    android:textColor="@color/main_header"
                    android:textSize="10sp"  />

                <TextView
                    android:id="@+id/txtEmployer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/main_header"
                    android:textSize="10sp"  />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_student_image" 
                android:padding="3dp">

                <TextView
                    android:id="@+id/TextView07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="9dp"
                    android:text="Salary"
                    android:textColor="@color/main_header"
                    android:textSize="10sp"  />

                <TextView
                    android:id="@+id/txtSalary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/main_header"
 	                android:textSize="10sp" />
            </TableRow>

            <TableRow
                android:id="@+id/TableRow03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_student_image"
                android:visibility="gone" 
                android:padding="3dp">

                <TextView
                    android:id="@+id/TextView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="9dp"
                    android:text="Date Of Joining"
                    android:textColor="@color/main_header"
                    android:textSize="10sp"  />

                <TextView
                    android:id="@+id/txtDoj"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/main_header"
                    android:textSize="10sp"  />
            </TableRow>

            <TableRow
                android:id="@+id/TableRow02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_student_image"
                android:visibility="gone" 
                android:padding="3dp">

                <TextView
                    android:id="@+id/TextView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="9dp"
                    android:text="Contact Person"
                    android:textColor="@color/main_header"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txtContactNm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/main_header"
                    android:textSize="10sp"  />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>