<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@color/bg_color"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="4px"
    android:paddingLeft="4px"
    android:paddingRight="4px"
    android:paddingTop="4px">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rlHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="left"
            android:text="Score card"
            android:textColor="#ffffff"
            android:textSize="15pt"
            android:typeface="serif"/>
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rlQuestion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlHeader"
        android:layout_marginBottom="91dp"
        android:orientation="horizontal">

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scroller"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/txHeader"
            android:fillViewport="true">

            <TableLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tableLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvSubject"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="15dip"
                        android:text="Subject"
                        android:textColor="#A9E2F3"
                        android:textSize="7pt"/>

                    <TextView
                        android:id="@+id/tvSubjectValue"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="15dip"
                        android:text=""
                        android:textColor="#81DAF5"
                        android:textSize="7pt"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvChapter"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="15dip"
                        android:text="Chapter"
                        android:textColor="#A9E2F3"
                        android:textSize="7pt"/>

                    <TextView
                        android:id="@+id/tvChapterValue"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="15dip"
                        android:text=""
                        android:textColor="#81DAF5"
                        android:textSize="7pt"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvTotalMarks"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="15dip"
                        android:text="Total points"
                        android:textColor="#A9E2F3"
                        android:textSize="7pt"/>

                    <TextView
                        android:id="@+id/tvTotalMarksValue"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="15dip"
                        android:text=""
                        android:textColor="#81DAF5"
                        android:textSize="7pt"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvScore"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="15dip"
                        android:text="Your score"
                        android:textColor="#A9E2F3"
                        android:textSize="7pt"/>

                    <TextView
                        android:id="@+id/tvScoreValue"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="15dip"
                        android:text=""
                        android:textColor="#81DAF5"
                        android:textSize="7pt"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvTotalQuestion"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="15dip"
                        android:text="Number of questions"
                        android:textColor="#A9E2F3"
                        android:textSize="7pt"/>

                    <TextView
                        android:id="@+id/tvTotalQuestionValue"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="15dip"
                        android:text=""
                        android:textColor="#81DAF5"
                        android:textSize="7pt"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvAttempted"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="15dip"
                        android:text="Number of attemped questions"
                        android:textColor="#A9E2F3"
                        android:textSize="7pt"/>

                    <TextView
                        android:id="@+id/tvAttemptedValue"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="15dip"
                        android:text=""
                        android:textColor="#81DAF5"
                        android:textSize="7pt"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvCorrect"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="15dip"
                        android:text="Number of correct answer"
                        android:textColor="#A9E2F3"
                        android:textSize="7pt"/>

                    <TextView
                        android:id="@+id/tvCorrectValue"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="15dip"
                        android:text=""
                        android:textColor="#81DAF5"
                        android:textSize="7pt"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvWrong"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="15dip"
                        android:text="Number of wrong answer"
                        android:textColor="#A9E2F3"
                        android:textSize="7pt"/>

                    <TextView
                        android:id="@+id/tvWrongValue"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="15dip"
                        android:text=""
                        android:textColor="#81DAF5"
                        android:textSize="7pt"/>
                </TableRow>
            </TableLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlNavigation"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@drawable/nav_back"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btReview"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/review"/>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Review"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>