<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@color/bg_color">

    <LinearLayout
        android:id="@+id/llParent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="3dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Installment Summary"
            android:textColor="@color/SunshineYellow"
            android:textSize="10pt"
            android:typeface="serif" />

        <LinearLayout
            android:id="@+id/llBottomBorder"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@drawable/white_bar"
            android:orientation="vertical" >
        </LinearLayout>

        <TableLayout
            android:id="@+id/tblInstallmentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:background="@color/main_header">

                <TextView
                    android:id="@+id/HdrInstCourseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:text="Course Name" android:textColor="#000000" android:textSize="7pt"/>

                <TextView
                    android:id="@+id/HdrInstallmentDt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="Installment Dt." android:textColor="#000000" android:gravity="right" android:textSize="7pt"/>

                <TextView
                    android:id="@+id/HdrInstallmentAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:text="Insatllment Amt." android:textColor="#000000" android:gravity="right" android:textSize="7pt"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:background="@color/main_header">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Total    " android:gravity="right" android:textColor="#000000" android:textSize="7pt"/>

            <TextView
                android:id="@+id/txtTotalInstAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amt.." android:gravity="right" android:textColor="#000000" android:textSize="7pt"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>