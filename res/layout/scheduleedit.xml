<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4px"
    android:paddingLeft="4px"
    android:paddingRight="4px"
    android:paddingTop="4px" >

	<ScrollView
	    android:id="@+id/scroller"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_alignParentTop="true">
    
	    <TableLayout
	        android:id="@+id/tlLedger"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
	    
	        <TableRow
	            android:id="@+id/tableRow1"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" android:weightSum="2">
	
	            <TextView
	                android:id="@+id/lblDate"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Date:" android:textSize="20dp"/>

	            <TextView
	                android:id="@+id/txtDate"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="Medium Text"
	                android:textAppearance="?android:attr/textAppearanceMedium" 
	                android:textStyle="italic" 
	                android:textColor="#FFFFFF"/>
	        </TableRow>
	
	        <TableRow
	            android:id="@+id/tableRow3"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" android:weightSum="2">
	            
	            <TextView
	                android:id="@+id/lblAmt"
	                android:layout_width="wrap_content"
	                android:layout_height="fill_parent"
	                android:text="Event Message:" android:textSize="20dp"/>

	            <EditText
	                android:id="@+id/editMessage"
	                android:layout_width="fill_parent"
	                android:layout_height="170dp"
	                android:inputType="textMultiLine" android:layout_weight="2"/>
	        </TableRow>
	        
		</TableLayout>

    </ScrollView>

</RelativeLayout>