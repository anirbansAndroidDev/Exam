<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#00FFFF00" android:startColor="#00FFFF00" />

            <stroke android:width="7dp" android:color="#FF9900" />

            <corners android:radius="5dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="#00FFFF00" android:startColor="#00FFFF00" />

            <stroke android:width="3dp" android:color="#FFCC00" />

            <corners  android:radius="5dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#00FFFF00" android:startColor="#00FFFF00" />

            <stroke android:width="0.5dp" android:color="#0000FF33" />

            <corners  android:radius="5dp" />
        </shape></item>

</selector>